@model DataTracker.Models.Graph

@{
    ViewData["Title"] = "Create A Graph";
}

<img src="~/imgs/BackButton.png"
     alt="Create Graph"
     style="height: 100px; margin-top: 4.5rem; margin-left: 1rem;"
     class="fixed-top text-left"
     onclick='history.go(-1)'>

<h1>Create A Graph</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateGraph">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GraphType" class="control-label text-light">Graph Type</label>
                <input asp-for="GraphType" class="form-control" />
                <span asp-validation-for="GraphType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GraphData" class="control-label text-light">Graph Data</label>
                <input asp-for="GraphData" class="form-control" />
                <span asp-validation-for="GraphData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            <label asp-for="GraphType" class="control-label text-light">Graph Type</label>
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Bar
                    <span class="caret"></span>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Bar</a>
                    <a class="dropdown-item" href="#">Line</a>
                    <a class="dropdown-item" href="#">Pie</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/js/site.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
