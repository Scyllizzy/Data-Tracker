@model DataTracker.Models.Graph

@{
    ViewData["Title"] = "Create A Graph";
}

<img src="~/imgs/BackButton.png"
     alt="Create Graph"
     style="height: 100px; margin-top: 4.5rem; margin-left: 1rem;"
     class="fixed-top text-left"
     onclick='history.go(-1)'>

<h1>Create A Graph</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateGraph">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GraphName" class="control-label text-light">Graph Name</label>
                <input asp-for="GraphName" class="form-control" />
                <span asp-validation-for="GraphName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GraphData" class="control-label text-light">Graph Data</label>
                <input asp-for="GraphData" class="form-control" />
                <span asp-validation-for="GraphData" class="text-danger"></span>
            </div>

            <canvas id="myChart"></canvas>

            <label asp-for="GraphType" class="control-label text-light">Graph Type</label>
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Bar
                    <span class="caret"></span>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item">Bar</a>
                    <a class="dropdown-item">Line</a>
                    <a class="dropdown-item">Pie</a>
                </div>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    Chart.defaults.global.defaultFontColor = 'white';
    var chart = new Chart(ctx, {
        // The type of chart we want to create
        type: 'bar',

        // The data for our dataset
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
            datasets: [{
                label: 'Graph Name',
                backgroundColor: 'rgb(255, 99, 132)',
                borderColor: 'rgb(255, 99, 132)',
                data: [0, 10, 5, 2, 20, 30, 45]
            }]
        },

        // Configuration options go here
        options: {}
    });
</script>

<script src="~/js/site.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
